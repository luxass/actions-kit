{
  "name": "actions-kit",
  "version": "0.3.1",
  "description": "A toolkit for GitHub Actions",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.22.0",
  "license": "MIT",
  "homepage": "https://github.com/luxass/actions-kit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/actions-kit.git",
    "directory": "packages/actions-kit"
  },
  "bugs": {
    "url": "https://github.com/luxass/actions-kit/issues"
  },
  "keywords": [
    "actions",
    "github actions",
    "toolkit"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./builder": {
      "import": "./dist/builder.mjs",
      "require": "./dist/builder.cjs"
    },
    "./builder-utils": {
      "import": "./dist/builder-utils.mjs",
      "require": "./dist/builder-utils.cjs"
    },
    "./config": {
      "import": "./dist/config.mjs",
      "require": "./dist/config.cjs"
    },
    "./utils": {
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "bin": {
    "actions-kit": "./bin/actions-kit.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsdown --tsconfig=./tsconfig.build.json",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf dist node_modules",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@actions-sdk/action-schema": "workspace:*",
    "@actions-sdk/action-utils": "workspace:*",
    "c12": "catalog:prod",
    "cac": "catalog:prod",
    "consola": "catalog:prod",
    "defu": "catalog:prod",
    "farver": "catalog:prod",
    "unplugin-actions-kit": "workspace:*",
    "yaml": "catalog:unplugin",
    "zod": "catalog:prod"
  },
  "devDependencies": {
    "@actions-kit/tsconfig": "workspace:*",
    "@actions-kit/tsdown-config": "workspace:*",
    "@luxass/eslint-config": "catalog:linting",
    "@types/node": "catalog:types",
    "eslint": "catalog:linting",
    "publint": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:testing"
  }
}
