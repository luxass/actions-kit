{
  "name": "@actions-kit/monorepo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "turbo run build --filter \"./packages/**\" --concurrency=15",
    "build:all": "turbo run build --concurrency=15",
    "dev": "turbo run dev --filter \"./packages/**\"",
    "docs:dev": "pnpm -C '@actions-kit/docs' run dev",
    "docs:build": "pnpm -C '@actions-kit/docs' run build",
    "typecheck": "turbo run typecheck",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "turbo": "catalog:"
  }
}
